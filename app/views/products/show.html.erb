<table class="table table-hover">
<tr>
  <th><%= @product.name %></th>
  <td><%= @product.sale_message %></td>
  <td class="<%= @product.discount_class_name %>">Only <%= number_to_currency(@product.price) %>!</td>
  <td>Tax: <%= number_to_currency(@product.tax) %></td>
  <td>Total: <%= number_to_currency(@product.total) %></td>
  <td><img src= <%= @product.image %> class="img-circle img-responsive"></td>
  <td><%= @product.description %></td>
</tr>
</table>
<div class="btn btn-success">
  <a href="/products/<%= @product.id %>/edit">Edit</a>
</div>
<div class="btn btn-danger">
  <%= link_to "Delete", "/products/#{@product.id}", method: :delete %>
</div>
<div class="btn btn-info">
  <a href="/products">Back to all products</a>
</div>