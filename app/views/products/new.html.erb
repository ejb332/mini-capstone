<h1>Add cheese</h1>
<%= form_tag '/products', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, "", class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag "Add cheesy product", class: 'btn btn-success' %>
  </div>
<% end %>
<%= form_tag "/products", method: :get do %>
  <%= submit_tag "Cancel", class: 'btn btn-danger' %>
<% end %>