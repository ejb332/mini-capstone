<h1>In Cart</h1>
<h3>
  <% @carted_products.each do |carted_product| %>
    <%= carted_product.quantity %>
    <%= carted_product.product.name %>
    At $<%= carted_product.product.price %> each
    <%= link_to "Remove from cart", "cart/#{carted_product.id}", method: :delete %>
    <br>
  <% end %>
</h3>

<%= form_tag "/orders", method: :post do %>
  <%= submit_tag "Buy now!", class: "btn btn-success" %>
<% end %>